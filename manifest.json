{
  "manifest_version": 3,
  "name": "Word Me - Smart Dictionary",
  "version": "1.4",
  "description": "Right-click any word for definitions, phonetics, and translations. Developed by The Trimatrix Lab.",
  "author": "The Trimatrix Lab",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "styles.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}