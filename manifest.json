{
  "manifest_version": 3,
  "name": "Word Me - Smart Dictionary",
  "version": "1.3",
  "description": "Right-click any word for definitions, phonetics, and translations. Developed by The Trimatrix Lab.",
  "author": "The Trimatrix Lab",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}