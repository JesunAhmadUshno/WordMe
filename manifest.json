{
  "manifest_version": 3,
  "name": "Word Me - Smart Dictionary",
  "version": "1.1",
  "description": "Right-click any word for definitions, phonetics, and translations. Developed by The Trimatrix Lab.",
  "author": "The Trimatrix Lab",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}